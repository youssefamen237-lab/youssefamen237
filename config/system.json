{
  "system": {
    "version": "2.0.0",
    "name": "Smart Shorts YouTube Engine",
    "description": "Self-governing growth engine for YouTube Shorts"
  },
  "production": {
    "daily_min": 4,
    "daily_max": 8,
    "weekly_max": 50,
    "upload_delay_min_seconds": 120,
    "upload_delay_max_seconds": 660,
    "optimal_timing_variance_minutes": 30
  },
  "content": {
    "video": {
      "width": 1080,
      "height": 1920,
      "fps": 30,
      "aspect_ratio": "9:16",
      "extension": "mp4",
      "codec": "h264"
    },
    "structure": {
      "hook_duration": 0.7,
      "question_min_duration": 0.5,
      "question_max_duration": 1.0,
      "timer_min_duration": 4.8,
      "timer_max_duration": 5.3,
      "answer_min_duration": 1.0,
      "answer_max_duration": 2.0,
      "total_length_min": 8.5,
      "total_length_max": 15.5
    },
    "question_types": [
      "True/False",
      "Multiple Choice",
      "Visual Difference",
      "Quick Solve",
      "Guess the Answer",
      "Only Geniuses Can Solve",
      "5 Second Challenge",
      "Memory Test",
      "Trivia",
      "Brain Teaser",
      "Optical Illusion",
      "Quick Math",
      "Pop Culture"
    ],
    "safety": {
      "banned_words": [
        "death", "kill", "murder", "suicide",
        "war", "attack", "bomb", "terrorism",
        "politics", "political", "democrat", "republican",
        "sexual", "sex", "explicit",
        "religion", "atheist", "christian", "muslim", "jewish",
        "racist", "hate", "discrimination"
      ],
      "min_score_to_publish": 0.6,
      "require_gemini_check": true,
      "require_openai_check": false
    },
    "diversity": {
      "min_question_gap_days": 15,
      "similarity_threshold": 0.75,
      "max_same_type_consecutive": 3,
      "music_reuse_limit_weekly": 3
    }
  },
  "audio": {
    "speech": {
      "speed_min": 0.8,
      "speed_max": 1.2,
      "base_speed": 1.0,
      "voice_genders": ["male", "female"],
      "default_gender_ratio": {
        "female_percentage": 60,
        "male_percentage": 40
      }
    },
    "music": {
      "volume_min": 0.18,
      "volume_max": 0.27,
      "reuse_limit_per_week": 3,
      "preferred_bpm_range": [100, 130],
      "preferred_moods": ["energetic", "uplifting", "motivating"]
    }
  },
  "background": {
    "source": "/assets/backgrounds",
    "types": ["gradient", "animated", "static_image", "video"],
    "reuse_after_days": 7,
    "gradient_enabled": true
  },
  "analytics": {
    "performance_score": {
      "watch_time_weight": 0.35,
      "completion_weight": 0.25,
      "ctr_weight": 0.15,
      "comments_weight": 0.1,
      "rewatch_weight": 0.15
    },
    "targets": {
      "retention_goal": 0.85,
      "ctr_goal": 0.07,
      "completion_goal": 0.70
    },
    "thresholds": {
      "ctr_low": 0.03,
      "ctr_high": 0.08,
      "completion_low": 0.50,
      "impressions_drop_alert": 0.60,
      "shadow_ban_hours_pause": 48
    }
  },
  "adaptive": {
    "behavioral_drift_interval_days": 7,
    "drift_speech_speed_range": 0.02,
    "drift_video_length_range": 1.2,
    "strategy_update_interval_days": 7,
    "upload_density_excellent": 1.20,
    "upload_density_poor": 0.70,
    "upload_density_critical": 0.50
  },
  "upload_schedule": {
    "preferred_hours": [8, 12, 17, 21],
    "avoid_hours_start": 22,
    "avoid_hours_end": 6,
    "weekend_multiplier": 0.9
  },
  "api": {
    "youtube_quota_per_day": 10000,
    "max_api_failures_per_minute": 2,
    "retry_delay_minutes": 17,
    "max_retries": 3,
    "request_timeout_seconds": 30
  },
  "database": {
    "path": "/workspaces/youssefamen237/db/system.db",
    "backup_interval_days": 7,
    "retention_days": 365,
    "cleanup_old_failures_days": 7
  },
  "logging": {
    "directory": "/workspaces/youssefamen237/logs",
    "level": "INFO",
    "max_file_size_mb": 100,
    "backup_count": 10,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "features": {
    "enable_trends": true,
    "enable_ab_testing": true,
    "enable_comment_automation": true,
    "enable_playlist_management": true,
    "enable_long_form_generation": true,
    "enable_shadow_ban_detection": true,
    "enable_behavioral_drift": true,
    "enable_content_safety": true
  },
  "cta_variations": [
    "Write your answer below",
    "Drop it in the comments",
    "Think fast",
    "Can you solve it?",
    "Comment your answer",
    "What's your answer?",
    "Let me know below",
    "Challenge yourself",
    "Comment now",
    "Quick answer below",
    "Your turn to guess",
    "Try to solve it",
    "Can you answer this?",
    "Share your answer",
    "Show off your brain"
  ],
  "hooks": [
    "Only 1% Can Solve This",
    "This Will Break Your Brain",
    "Can You Figure It Out?",
    "Challenge: Solve in 5 Seconds",
    "Not Everyone Can Get This Right",
    "Brain Teaser Alert",
    "Quick Test",
    "Are You Smart Enough?",
    "Impossible Challenge",
    "99% Fail This",
    "Ultimate Brain Test",
    "Can You Beat This?",
    "Genius Level Challenge",
    "Mind-Bending",
    "Tricky Question"
  ],
  "keywords": {
    "general": [
      "shorts", "quiz", "brain", "teaser", "challenge",
      "viral", "trending", "test", "knowledge", "trivia"
    ],
    "engagement": [
      "solve", "answer", "comment", "guess", "correct",
      "logic", "puzzle", "genius", "smart", "fast"
    ]
  }
}
