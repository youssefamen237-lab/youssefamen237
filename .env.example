# YouTube Auto-Upload System Configuration

# ==========================================
# LLM Configuration (Content Generation)
# ==========================================

# Gemini API Key (Free tier available)
# Get from: https://aistudio.google.com/app/apikeys
GEMINI_API_KEY=your_gemini_api_key

# Groq API Key (Free tier available)
# Get from: https://console.groq.com
GROQ_API_KEY=your_groq_api_key

# OpenRouter Key (Optional, paid)
# Get from: https://openrouter.ai
OPENROUTER_KEY=your_openrouter_key

# LLM Provider Order
LLM_PROVIDER_ORDER=gemini,groq,openrouter

# Model Selection
GEMINI_MODEL=gemini-1.5-flash
GROQ_MODEL=llama-3.1-70b-versatile
OPENROUTER_MODEL=meta-llama/llama-3.1-70b-instruct

# ==========================================
# Text-to-Speech Configuration
# ==========================================

# ElevenLabs API Key (Free tier available)
# Get from: https://elevenlabs.io
ELEVEN_API_KEY=your_eleven_api_key

# Voice ID for ElevenLabs
ELEVEN_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# TTS Provider Order
TTS_ORDER=elevenlabs,edge,espeak

# Edge TTS Voice
EDGE_VOICE=en-US-AriaNeural

# ==========================================
# YouTube OAuth Configuration
# ==========================================

# Get from: https://console.cloud.google.com
# Channel 3 Credentials (For manager/analyzer)
YT_CLIENT_ID_3=your_client_id_3
YT_CLIENT_SECRET_3=your_client_secret_3
YT_REFRESH_TOKEN_3=your_refresh_token_3

# Additional YouTube credentials (optional)
YT_CLIENT_ID_1=your_client_id_1
YT_CLIENT_SECRET_1=your_client_secret_1
YT_REFRESH_TOKEN_1=your_refresh_token_1

YT_CLIENT_ID_2=your_client_id_2
YT_CLIENT_SECRET_2=your_client_secret_2
YT_REFRESH_TOKEN_2=your_refresh_token_2

# Your Channel ID
YT_CHANNEL_ID=your_channel_id

# YouTube Category
YOUTUBE_CATEGORY_SHORT=24
YOUTUBE_CATEGORY_LONG=24

# Privacy Status: public, unlisted, private
YOUTUBE_PRIVACY_SHORT=public
YOUTUBE_PRIVACY_LONG=public

# Made for Kids
YOUTUBE_MADE_FOR_KIDS=false

# ==========================================
# Image/Background Configuration
# ==========================================

# Pexels API Key (Free)
# Get from: https://www.pexels.com/api
PEXELS_API_KEY=your_pexels_key

# Pixabay API Key (Free)
# Get from: https://pixabay.com/api
PIXABAY_API_KEY=your_pixabay_key

# Unsplash Keys (Free)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key
UNSPLASH_ID=your_unsplash_id
UNSPLASH_SECRET_KEY=your_unsplash_secret

# ==========================================
# Service Configuration
# ==========================================

# GitHub Token (For accessing artifacts)
GITHUB_TOKEN=your_github_token

# Content Language
CONTENT_LANGUAGE=en

# ==========================================
# Video Configuration
# ==========================================

# Countdown seconds
COUNTDOWN_SECONDS=10

# Answer reveal seconds
ANSWER_REVEAL_SECONDS=1

# Video FPS
VIDEO_FPS=30

# Short video dimensions
SHORT_W=1080
SHORT_H=1920

# Long video dimensions
LONG_W=1920
LONG_H=1080

# Font file path
FFMPEG_FONTFILE=/usr/share/fonts/truetype/dejavu/DejaVuSans-Bold.ttf

# ==========================================
# Publishing Configuration
# ==========================================

# Minimum days between question repeats
MIN_DAYS_BETWEEN_REPEATS=15

# Allow paid providers (OpenAI)
ALLOW_PAID_PROVIDERS=false

# Open AI Configuration (Optional, paid)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo

# ==========================================
# Advanced Options
# ==========================================

# OAuth Scopes
YT_OAUTH_SCOPES=https://www.googleapis.com/auth/youtube.upload
